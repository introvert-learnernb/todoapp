
<%- include("./partials/header")%>


<div class="top_bar text-center">
   <h2>Todo App</h2> 
</div>

<div class="container mt-5">
    <form action="/add/todo" method= "POST" class="d-flex">
        <input type="text" name="todo" id="" class="form-control" placeholder="Enter To Do Task">
        <input type="submit" value="Add Todo" class="btn btn-md btn-light mx-2">
    </form>

    <ul class="list-group my-5">

        <% todo.forEach(todos => { %>

        <li class="list-group-item"><%= todos.todo %>
            <a href="/delete/todo/<%= todos._id %>" class="btn btn-sm btn-danger">Delete</a>
        </li>

        <%}) %>
    </ul>
</div>





